.search
    max-width: 550px
    @media screen and (max-width: 768px)
        max-width: none
    &-input
        height: 60px
        &-wrapper
            position: relative
    #q
        width: 100%
        font-family: "Raleway", "Helvetica Neue", Helvetica, Arial, sans-serif
        font-weight: bold
    #submit
        display: inline-block
        vertical-align: middle
        padding: 0 16px
        border: none
        background-color: #fff;
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075)
        i
            color: #b3b3b3
.navbar-form .input-group.input-group-lg
    width: 500px
    max-width: 500px
    @media screen and (max-width: 768px)
        width: 100%
        max-width: none;