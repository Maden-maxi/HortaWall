#registration-section
    margin: 50px auto
.login-container
    background-image: url(../img/bg-login.png)
    background-size: cover;
    input
        color: #555;
        font-weight: 800
        text-align: center
        margin: 25px auto
        background-color: #f5cf8c;
        box-shadow: 0 10px 10px rgba(10,10,10, .7)
        &::placeholer
            color: #555
.login-form
    background-color: #ffffff
    max-width: 855px
    border-radius: 5px
    margin: 20px auto 100px
    padding: 50px 100px
    .input-group, .menu
        width: 80%
        margin: 20px auto 40px
    input[type="email"]
        width: 100% !important
        -webkit-border-radius: 5px !important
        -moz-border-radius: 5px !important
        border-radius: 5px !important
    .login-help
        text-align: center
        margin: 40px auto
        max-width: 360px
        &_full
            margin: 20px auto
            max-width: none