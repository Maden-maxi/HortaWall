include ../mixins/log-btn
include ../mixins/lang
header#header
    nav.navbar.navbar-default.navbar-black
        .container
            .row
                .col-xs-12
                    .navbar-header
                        button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="navbar")
                            span.sr-only Toggle nav
                            - for (var i=0; i < 3; i++)
                                span.icon-bar
                        .navbar-bran
                            +selectLang(languages, 'dropdown')
                    form.navbar-form.navbar-left(role="search")
                        .form-group
                            include input-search
                    .nav.navbar-right
                        +logBtn('login')