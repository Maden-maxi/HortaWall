.card
    margin: auto
    max-width: 310px
    &_square
        margin: 5px
        max-width: 210px
    &:hover &__img-info
        opacity: 1
    .panel-heading
        padding: 0
    &__img
        padding: 0
        &-container
            position: relative
        &-info
            position: absolute
            top: 0
            left: 0
            bottom: 0
            right: 0
            background-color: rgba(0, 0, 0, 0.7)
            padding: 10px 15px
            opacity: 0
            color: #fff
            transition opacity .3s
            display: flex
            flex-direction: column
            justify-content: space-between
    &__title
        margin-top: 0
        font-size: 1.75rem
    &__likes
        &_pb
            padding-bottom: 25px
        span
            padding-right: 5px
    &__liked
        margin-top: 10px
    &__date
        position: absolute
        bottom: -1px
        left: 20px
        background-color: #ffffff
        color: #000000
        &_center
            left: 50%
            transform translateX(-50%)
    &__members
        margin-bottom: 50px