.slide-img
    margin-top: 40px
.slide-likes
    margin: 30px 0
.border-brand-wrapper
    display: flex
    justify-content: center
    position: relative
    margin-bottom: 40px
.border-corners
    position: relative
    display: inline-block
    padding: 2px
.border-brand
    background url(../img/corner-left-top.png) no-repeat top left, url(../img/corner-right-top.png) no-repeat top right, url(../img/corner-right-bottom.png) no-repeat bottom right, url(../img/corner-left-bottom.png) no-repeat bottom left
    padding: 20px
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    pointer-events none
.border-brand-wrapper
    img
        padding: 5px
        border: 10px solid #82ca87

.image-title
    @media screen and (max-width: 500px)
        font-size: 2em
    img
        margin: 0 10px
.image-container
    max-width: 931px
    margin: 20px auto 0
.image-desc
    margin: 40px auto 20px
.member
    max-width: 120px
    margin: 15px
    img
        margin-bottom: 20px
