include ../mixins/card
-

    var PATH = {
        cards: 'assets/img/cards/',
        flags: 'assets/img/langs/'
    };
    var cards = [
        new Card(PATH.cards + 'card2.png', 'Portugal', 'Ukraine', 'Name1, Name2, Name3', '20.20.12', 'Leeuwenhare', '56', '2', PATH.flags + 'uk.png', true),
        new Card(PATH.cards + 'card3.png', 'USA', 'Russia', 'Name1, Name2, Name3', '21.12.16', 'Wenhar', '44', '0', PATH.flags + 'ru.png', true),
        new Card(PATH.cards + 'card4.png', 'Spain', 'UK', 'Name1, Name2, Name3', '20.20.12', 'Wenhar', '16', '20', PATH.flags + 'uk.png', false),
        new Card(PATH.cards + 'card7.png', 'Italy', 'Ukraine', 'Name1, Name2, Name3', '20.20.12', 'Leeuwenhare', '16', '2', PATH.flags + 'ru.png', true)
    ];

section.section
    .section-title
        h2.text-center.alert.alert-warning Последние фото
    .container
        .row
            .col-xs-12
                .row
                    each card in cards
                        .col-xs-12.col-sm-6.col-lg-3
                            +card(card)
section.section.padding-collapse
    .section-title
        h2.text-center.alert.alert-danger Лучшие фото
    .container
        .row
            .col-xs-12
                .row
                    each card in cards
                        .col-xs-12.col-sm-6.col-lg-3
                            +card(card)